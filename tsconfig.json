{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "esModuleInterop": true,
    "baseUrl": ".",
    "jsx": "react-native",
    "lib": ["ES2015", "DOM"],
    "moduleResolution": "node",
    "paths": {
      "@app/*": ["src/app/*"],
      "@features/*": ["src/features/*"],
      "@entities/*": ["src/entities/*"],
      "@widgets/*": ["src/widgets/*"],
      "@shared/*": ["src/shared/*"],
      "@processes/*": ["src/processes/*"],
      "@/*": ["src/*"]
    }
  }
}
